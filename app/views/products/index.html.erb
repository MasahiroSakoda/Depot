<h1>Listing products</h1>

<%= link_to 'Create New Product', new_product_path, :class => 'btn btn-small btn-info' %>
<table class="table table-bordered table-striped">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Image url</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.title %></td>
    <td><%= product.description %></td>
    <td><%= product.image_url %></td>
    <td><%= product.price %></td>
	<td><%= link_to 'Show', product, :class => 'btn btn-mini btn-primary' %></td>
    <td><%= link_to 'Edit', edit_product_path(product), :class => 'btn btn-mini btn-success' %></td>
	<td><%= link_to 'Destroy', product, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-mini btn-danger' %></td>
  </tr>
<% end %>
</table>

<br />

